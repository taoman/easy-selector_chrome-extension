{
  "manifest_version": 3,
  "name": "easy-selector",
  "description": "一个轻巧简单好用的获取DOM元素CSS选择器的Chrome插件！",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": [
    "http://localhost/*",
    "http://*/*",
    "https://*/*",
    "file://*/*",
    "<all_urls>"
  ],
  "action": {
    "default_icon": "./icons/easy-selector_48.png",
    "default_title": "easy css selector"
  },
  "icons": {
    "16": "./icons/easy-selector_16.png",
    "48": "./icons/easy-selector_48.png",
    "128": "./icons/easy-selector_128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/domToImg/index.js",
        "libs/socket/index.js",
        "libs/finder/finder.js",
        "libs/tippy/popper.min.js",
        "libs/tippy/tippy.umd.min.js",
        "injectScript.js"
      ],
      "css": ["libs/tippy/tippy.css", "libs/index.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "libs/domToImg/index.js",
        "libs/socket/index.js",
        "libs/finder/finder.js",
        "libs/tippy/popper.min.js",
        "libs/tippy/tippy.umd.min.js",
        "injectScript.js",
        "libs/tippy/tippy.css",
        "libs/index.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
